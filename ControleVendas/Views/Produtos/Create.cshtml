@model ControleVendas.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1 class="mt-3">Adicionar</h1>
    <h4>Produto</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" class="bg-white border border-light-subtle rounded-3 p-20">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricacao" class="control-label"></label>
                    <input asp-for="Descricacao" class="form-control" />
                    <span asp-validation-for="Descricacao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Preco" class="control-label"></label>
                    <input asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Estoque" class="control-label"></label>
                    <input asp-for="Estoque" class="form-control" />
                    <span asp-validation-for="Estoque" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Categoria" class="control-label"></label>
                    <input asp-for="Categoria" class="form-control" />
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fornecedor" class="control-label"></label>
                    <input asp-for="Fornecedor" class="form-control" />
                    <span asp-validation-for="Fornecedor" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Adicionar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Voltar a lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

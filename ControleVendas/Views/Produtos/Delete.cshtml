@model ControleVendas.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1 class="mt-5">Deletar</h1>

    <h3>Tem certeza que deseja deletar este produto?</h3>
    <div>
        <h4>Produto</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricacao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricacao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Preco)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Preco)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estoque)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estoque)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Categoria)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Categoria)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fornecedor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fornecedor)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ProdutoID" />
            <input type="submit" value="Deletar" class="btn btn-danger me-2" />
            <a asp-action="Index">Voltar a lista</a>
        </form>
    </div>
</div>
@model ControleVendas.Models.Venda

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-5">
    <h1>Deletar</h1>

    <h3>Tem certeza que deseja deletar essa venda?</h3>
    <div>
        <h4>Venda</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FuncionarioID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FuncionarioID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ClienteID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ClienteID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataVenda)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataVenda)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalVenda)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalVenda)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MetodoPagamento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MetodoPagamento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StatusEntrega)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StatusEntrega)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="VendaID" />
            <input type="submit" value="Deletar" class="btn btn-danger me-2" />
            <a asp-action="Index">Voltar a lista</a>
        </form>
    </div>
</div>

@model ControleVendas.Models.ItensVenda

@{
    ViewData["Title"] = "Details";
}

<div class="container my-5">
    <h1>Detalhes</h1>

    <div>
        <h4>Itens da venda</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VendaID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VendaID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProdutoID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProdutoID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantidade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantidade)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PrecoVenda)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrecoVenda)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Desconto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Desconto)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" class="btn btn-outline-secondary me-2" asp-route-id="@Model?.ItensVendaID">Editar</a>
        <a asp-action="Index">Voltar a lista</a>
    </div>
</div>

@model ControleVendas.Models.ItensVenda

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-5">
    <h1>Deletar</h1>

    <h3>Tem certeza que deseja deletar este item?</h3>
    <div>
        <h4>Itens da venda</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VendaID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VendaID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProdutoID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProdutoID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantidade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantidade)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PrecoVenda)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrecoVenda)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Desconto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Desconto)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ItensVendaID" />
            <input type="submit" value="Deletar" class="btn btn-danger me-2" />
            <a asp-action="Index">Voltar a listar</a>
        </form>
    </div>
</div>
@model ControleVendas.Models.NivelAcesso

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-5">
    <h1>Deletar</h1>

    <h3>Tem certeza que deseja deletar este nível?</h3>
    <div>
        <h4>Nível de acesso</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nivel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nivel)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="NivelAcessoID" />
            <input type="submit" value="Deletar" class="btn btn-danger me-2" />
            <a asp-action="Index">Voltar a lista</a>
        </form>
    </div>
</div>

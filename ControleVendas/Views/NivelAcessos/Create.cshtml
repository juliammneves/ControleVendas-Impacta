@model ControleVendas.Models.NivelAcesso

@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <h1>Criar</h1>

    <h4>Nivel de acesso</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" class="bg-white border border-light-subtle rounded-3 p-20">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nivel" class="control-label"></label>
                    <input asp-for="Nivel" class="form-control" />
                    <span asp-validation-for="Nivel" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-primary mt-3" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Voltar a lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
